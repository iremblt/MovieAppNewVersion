@model List<Category>
<div class="list-group ">
    <a href="/Movies/List" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==null?"active":"")">All Categories</a>
    @foreach (var category in Model)
    {
        <a href="/Movies/List/@category.CategoryId" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.CategoryId.ToString()?"active":"")">@category.Name</a>
    }
</div>
