@model CategoryListDTO
<h1>Edit Category</h1>
<hr />
<form method="post" asp-action="CategoryUpdate" asp-controller="Category">
    <div class="row">
        <div class="col-md-3">
            <input type="hidden" asp-for="@Model.CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />
                <input asp-for="Name" class="form-control" value="@Model.Name" />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        <div class="col-md-9">

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th style="width:15px">Remove</th>
                        <th style="width:30px">#</th>
                        <th style="width:100px">Image</th>
                        <th>Title</th>
                        <th style="width:70px">Categories</th>
                        <th style="width:160px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.Movies)
                    {
                        <tr>
                            <td>
                                <input type="radio" name="movieId" value="@movie.MovieId" />
                            </td>
                            <td>@movie.MovieId</td>
                            <td>
                                <img src="/img/@movie.MovieImage" alt="@movie.MovieTitle" width="100">
                            </td>
                            <td>@movie.MovieTitle</td>
                            <td>
                                <a asp-controller="Category" asp-action="CategoryUpdate" asp-route-id="@movie.MovieId" class="btn btn-primary btn-sm"> Update </a>             
                            </td>
                                 
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</form>

