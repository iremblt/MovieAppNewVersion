@model CategoryListAndCreateDTO
<h1> Category List</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CategoryAdd" asp-controller="Category" method="post">
            <div class="form-group">
                <label asp-for="CategoryAdd.Name"></label>
                <input asp-for="CategoryAdd.Name" class="form-control" />
                <span asp-validation-for="CategoryAdd.Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th style="width:30px;">#</th>
                    <th>Name</th>
                    <th style="width:70px;">Count</th>
                    <th style="width:160px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CategoryLists)
                {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.Name</td>
                        <td>@item.Movies.Count</td>
                        <td>
                            <a asp-action="CategoryUpdate" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Update</a>
                            <a asp-controller="Category" asp-action="CategoryDeleteConfirmed" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm"> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
