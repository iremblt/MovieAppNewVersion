@model IEnumerable<Movie>
<div id="movies">
    @if (Model.Count() > 0)
    {
        @foreach (var movie in Model)
        {
            <partial name="/Views/Shared/_movie.cshtml" model="movie" />
        }

    }
    else
    {
        <div class="alert alert-warning" role="alert">
            There is no movie in this category.
        </div>
    }
</div>
